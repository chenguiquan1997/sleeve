/* components/theme-diana/index.wxss */
.container{
  padding-bottom: 20rpx;
}

.top-img {
    height: 440rpx;
    width: 100%;
    display: flex;
}

.spu{
    margin-top: 20rpx;
    height: 400rpx;
    display:flex;
    flex-direction: row;
    justify-content: flex-end;
    align-items: center;
    background-size: 100%;
    background-repeat: no-repeat;
    /*flex-direction:row;*/
}

.spu > image:first-child{
    width: 100%;
    height: 100%;
}

.content{
    box-sizing: border-box;
    padding: 30rpx 30rpx 28rpx 30rpx;
    width: 320rpx;
    height: 320rpx;
    background-color: #ffffff;
    display:flex;
    flex-direction:column;
    justify-content: space-between;
    margin-right: 40rpx;

    /*border-radius: 5rpx;*/

    box-shadow:0px 0px 6px 0px rgba(221,221,221,0.5);
}

.title{
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    font-size:24rpx;
    color: #333333;
    margin-bottom: 10rpx;
}

.subtitle{
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;

    font-size: 22rpx;
    color: #999999;
}

.btn{
    width: 176rpx;
    height: 64rpx;
    background-color: #333333;
    display:flex;
    flex-direction:row;
    align-items:center;
    justify-content:center;
    margin-top: 8rpx;
}

.btn text{
    color:#ffffff;
    font-size:28rpx;
}

