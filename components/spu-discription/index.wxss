.container {
    width: 100%;
    box-sizing: border-box;
    background-color: #ffffff;
    padding:34rpx 30rpx 26rpx 30rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}
.left {
    display: flex;
    flex-direction: column;
    width: 75%;
}
.title {
    color: #333333;
    font-size: 30rpx;
    font-weight: 400;
    margin-bottom: 7rpx;
}
.subtitle {
    color: #999999;
    font-size: 28rpx;
    font-weight: 400;
    margin-top:30rpx;
    margin-bottom: 16rpx;
}
.tags_view {
    display: flex;
    flex-direction: row;
    margin-top: 8rpx;
    margin-bottom: 15rpx;
}
.l_tag {
    background-color: #DCEBE6 !important;
    color: #167658 !important;
    margin-right: 10rpx !important;
}
.price_view {
    display: flex;
    flex-direction: row;
    align-items: center;
}
.letting_down_price {
    margin-right: 15rpx;
}
.discount-tag {
    margin-left: 40rpx;
}
.right {
    width: 25%;
    display: flex;
    justify-content: center;
}
.share_container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 60rpx;
    height: 130rpx;
    background-color: #DCEBE6;
    margin-left: 70rpx;
}
.describe {
    font-size: 21rpx;
    color: #157658;
}