.container {
    display: flex;
    flex-direction: row;
    height: 160rpx;
    width: 690rpx;
    box-sizing: border-box;
    padding:20rpx;
    box-shadow:0px 0px 8px 0px rgba(221,221,221,0.5);
    box-sizing: border-box;
    margin-top: 20rpx;
}
.image {
    display: flex;
    height: 100%;
    width: 120rpx;
    margin-right:20rpx;
    flex: 0 0 auto;
}
.middle_container {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    width: 300rpx;
    margin-left: 10rpx;
}
.title {
    font-size: 24rpx;
    color: #333333;
}
.spaces {
    background-color: #DCEBE6 !important;
    color: #167658 !important;
}
.right_container {
    display: flex;
    flex-direction: column;
    right: 10rpx;
    width: 230rpx;

    font-size:24rpx;
    height: 100%;

    justify-content: flex-start;
    align-items: flex-end;
    flex:0 0 auto;
}
.price {
    margin-right: 0;
}
.count {
    margin-right: 0;
}