/* components/theme-camille/index.wxss */
.hidden-text{
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

.container{
    display:flex;
    flex-direction:column;
    align-items: center;
}

.top-img{
    height: 440rpx;
    width: 100%;
}

.panel{
    width:690rpx;
    padding: 0 30rpx 0 30rpx;
    box-sizing: border-box;
    display:flex;
    flex-direction:column;
    background:rgba(255,255,255,1);
    box-shadow:0px 2px 10px 0px rgba(187,187,187,0.5);
    border-radius: 6rpx;
    position: relative;
    top:-90rpx;
}

.spu{
    /*box-sizing: border-box;*/
    width: 100%;
    display:flex;
    flex-direction:row;
    justify-content: space-between;
    padding-bottom: 38rpx;
    padding-top: 30rpx;
    border-bottom: 3rpx solid #f7f7f7;
    /*align-items:center;*/
    /*justify-content:center;*/
}

.spu-inner{
    display:flex;
    flex-direction:row;
}

.left{
    width: 200rpx;
    height: 200rpx;
}

.right{
    display:flex;
    flex-direction:column;
    justify-content: space-between;
    width: 390rpx;
    height: 200rpx;
}

.title{
    margin-top: 10rpx;
    font-size:30rpx;
}

.buy{
    display:flex;
    flex-direction:row;
    justify-content: space-between;
    align-items: center;
}


.btn{
    width: 176rpx;
    height: 64rpx;
    background-color: #157658;
    display:flex;
    flex-direction:row;
    align-items:center;
    justify-content:center;
    margin-top: 8rpx;
}

.btn text{
    color: #ffffff;
    font-size: 28rpx;
    font-weight: 300;
}

